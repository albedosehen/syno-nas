# ===========================================
# AZURE CLI SERVICE CONFIGURATION
# ===========================================
# Azure CLI with azurite integration configuration
# Copy this file to .env and customize the values

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

# User and Group IDs for proper permissions on Synology NAS
PUID=1000
PGID=1000

# Timezone configuration
TZ=UTC

# ===========================================
# AZURE CLI CONFIGURATION
# ===========================================

# Enable automatic azurite initialization on startup
AZURE_CLI_AUTO_INIT=true

# Azure CLI data directory on host
AZURE_CLI_DATA_PATH=./data

# ===========================================
# AZURITE INTEGRATION
# ===========================================

# Azurite service name for Docker network communication
AZURITE_SERVICE_NAME=azurite

# Azurite storage account credentials (must match azurite service)
AZURITE_ACCOUNTS=synology:C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==

# Azurite service ports (must match azurite service configuration)
AZURITE_BLOB_PORT=10000
AZURITE_QUEUE_PORT=10001
AZURITE_TABLE_PORT=10002

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory limits for Azure CLI container
AZURE_CLI_MEMORY_LIMIT=512M
AZURE_CLI_MEMORY_RESERVATION=256M

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Network access restriction
LOCAL_NETWORK_ONLY=true

# ===========================================
# AZURE STORAGE INITIALIZATION
# ===========================================

# Storage containers to create during initialization
AZURE_STORAGE_CONTAINERS=northern-post,oneiric

# Storage queues to create during initialization
AZURE_STORAGE_QUEUES=notifications

# Storage tables to create during initialization
AZURE_STORAGE_TABLES=preference_options

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================

# Enable debug logging for Azure CLI
AZURE_CLI_DEBUG=false

# Enable verbose output
AZURE_CLI_VERBOSE=false

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Enable automated backups
ENABLE_AUTO_BACKUP=true

# Backup directory
BACKUP_PATH=/volume1/docker/backups/azure-cli

# ===========================================
# INTEGRATION ENDPOINTS
# ===========================================

# Azurite connection endpoints (auto-generated from service configuration)
# These are used by the initialization scripts
# Format: http://azurite:10000/synology (for blob storage)
# Format: http://azurite:10001/synology (for queue storage)
# Format: http://azurite:10002/synology (for table storage)