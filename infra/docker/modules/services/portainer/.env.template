# Portainer Configuration
# Copy this file to .env and customize the values for your Synology NAS setup

# ==========================================
# DOPPLER CONFIGURATION
# ==========================================

# Doppler service token (get this from Doppler dashboard)
# Generate at: https://dashboard.doppler.com/[your-project]/[config]/access/service-tokens
DOPPLER_TOKEN=your_doppler_service_token_here

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# User and Group IDs for proper permissions on Synology NAS
# Run 'id' command on your NAS to get these values
PUID=1000
PGID=1000

# Timezone configuration
# Use your local timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)
TZ=UTC

# ===========================================
# PORTAINER SERVICE CONFIGURATION
# ===========================================

# Portainer Web UI port (default: 9000)
# This is the main interface for accessing Portainer
PORTAINER_PORT=9000

# Portainer Edge Agent port (default: 8000)
# Used for Edge Agent connections (usually not needed for local deployments)
PORTAINER_EDGE_PORT=8000

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Portainer data directory
# This directory will store Portainer's configuration, database, and settings
# Use absolute path for production deployments
# Example for Synology: /volume1/docker/portainer/data
PORTAINER_DATA_PATH=./data

# ===========================================
# SYNOLOGY NAS SPECIFIC SETTINGS
# ===========================================

# Docker volumes path on Synology NAS
# This allows Portainer to manage volumes created by other containers
# Default Synology Docker volume path is /volume1/docker
SYNOLOGY_DOCKER_PATH=/volume1/docker

# Alternative volume paths (uncomment if using different volume numbers)
# SYNOLOGY_DOCKER_PATH=/volume2/docker
# SYNOLOGY_DOCKER_PATH=/volume3/docker

# ===========================================
# SECURITY SETTINGS
# ===========================================

# Network access restriction
# Set to 'true' to restrict access to local network only
# Set to 'false' if you need external access (NOT RECOMMENDED)
LOCAL_NETWORK_ONLY=true

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory limits for Portainer container
PORTAINER_MEMORY_LIMIT=512M
PORTAINER_MEMORY_RESERVATION=256M

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup directory for Portainer data
# Recommended to use a different volume for backups
BACKUP_PATH=/volume1/docker/backups/portainer