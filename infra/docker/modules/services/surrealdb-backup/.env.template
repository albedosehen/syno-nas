# ===========================================
# SURREALDB BACKUP SERVICE CONFIGURATION
# ===========================================

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

PUID=1000
PGID=1000
TZ=UTC

# ===========================================
# SURREALDB CONNECTION
# ===========================================

# SurrealDB endpoint for backup operations
SURREALDB_ENDPOINT=http://surrealdb:8000

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Backup service health check port (external access)
SURREALDB_BACKUP_HEALTH_PORT=8081

# Backup destination path on host
SURREALDB_BACKUP_PATH=./backups

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory limits for backup container
SURREALDB_BACKUP_MEMORY_LIMIT=256M
SURREALDB_BACKUP_MEMORY_RESERVATION=128M

# ===========================================
# SCHEDULING CONFIGURATION
# ===========================================

# Backup schedules are defined in crontab
# Nightly: 0 2 * * * (2:00 AM daily)
# Weekly: 0 3 * * 0 (3:00 AM Sunday)

# ===========================================
# MONITORING CONFIGURATION
# ===========================================

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3
HEALTH_CHECK_START_PERIOD=30s