# ===========================================
# AZURITE SERVICE CONFIGURATION
# ===========================================
# Azure Storage Emulator configuration
# Copy this file to .env and customize the values

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

# User and Group IDs for proper permissions on Synology NAS
PUID=1000
PGID=1000

# Timezone configuration
TZ=UTC

# ===========================================
# AZURITE CONFIGURATION
# ===========================================

# Azurite storage account credentials
# Default account name and key for development (DO NOT use in production)
AZURITE_ACCOUNTS=synology:C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==

# Data storage location inside container
AZURITE_LOCATION=./azurite_data

# Logging configuration
AZURITE_ENABLE_ACCESS_LOG=true
AZURITE_ENABLE_DEBUG_LOG=false

# SSL configuration (set to true for HTTPS endpoints)
AZURITE_SSL=false

# ===========================================
# PORT CONFIGURATION
# ===========================================

# Azure Storage service ports
AZURITE_BLOB_PORT=10000     # Blob storage service
AZURITE_QUEUE_PORT=10001    # Queue storage service
AZURITE_TABLE_PORT=10002    # Table storage service

# ===========================================
# STORAGE CONFIGURATION
# ===========================================

# Azurite data directory on host
# Recommended: Use absolute path for production
AZURITE_DATA_PATH=./data

# ===========================================
# RESOURCE LIMITS
# ===========================================

# Memory limits for Azurite container
AZURITE_MEMORY_LIMIT=256M
AZURITE_MEMORY_RESERVATION=128M

# ===========================================
# NETWORK CONFIGURATION
# ===========================================

# Network access restriction
LOCAL_NETWORK_ONLY=true

# ===========================================
# INTEGRATION SETTINGS
# ===========================================

# Connection string format for applications
# DefaultEndpointsProtocol=http;AccountName=synology;AccountKey=C2y6yDjf5/R+ob0N8A7Cgv30VRDJIWEHLM+4QDU5DE2nQ9nDuVTqobD4b8mGGyPMbIZnqyMsEcaGQy67XIw/Jw==;BlobEndpoint=http://localhost:10000/synology;QueueEndpoint=http://localhost:10001/synology;TableEndpoint=http://localhost:10002/synology

# Service discovery name for docker network communication
AZURITE_SERVICE_NAME=azurite

# ===========================================
# BACKUP CONFIGURATION
# ===========================================

# Enable automated backups
ENABLE_AUTO_BACKUP=true

# Backup directory
BACKUP_PATH=/volume1/docker/backups/azurite