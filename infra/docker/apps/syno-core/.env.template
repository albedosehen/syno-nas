# ===========================================
# SYNO-CORE ENVIRONMENT CONFIGURATION
# ===========================================

# ===========================================
# SYSTEM CONFIGURATION
# ===========================================

PUID=1000
PGID=1000
TZ=UTC

# ===========================================
# SURREALDB BACKUP CONFIGURATION
# ===========================================

# Backup service health check port (external access)
SURREALDB_BACKUP_HEALTH_PORT=8081

# Backup destination path on host
SURREALDB_BACKUP_PATH=/volume1/docker/backups/surrealdb

# Resource limits for backup container
SURREALDB_BACKUP_MEMORY_LIMIT=256M
SURREALDB_BACKUP_MEMORY_RESERVATION=128M

# ===========================================
# SURREALDB CONFIGURATION
# ===========================================

SURREALDB_PORT=8001
SURREALDB_DATA_PATH=/volume1/docker/core/surrealdb/data
SURREALDB_CONFIG_PATH=./config/surrealdb
SURREALDB_MEMORY_LIMIT=1G
SURREALDB_MEMORY_RESERVATION=512M

# ===========================================
# DOPPLER CONFIGURATION
# ===========================================

DOPPLER_TOKEN=
DOPPLER_PROJECT=core-services
DOPPLER_CONFIG=dev