# Portainer Configuration
# Customize these values for your Synology NAS setup

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# User and Group IDs for proper permissions on Synology NAS
PUID=1000
PGID=1000

# Timezone configuration
TZ=UTC

# ==========================================
# PORTAINER NETWORK CONFIGURATION
# ==========================================

# Portainer Web UI port
PORTAINER_PORT=9000

# Portainer Edge Agent port
PORTAINER_EDGE_PORT=8000

# ==========================================
# STORAGE CONFIGURATION
# ==========================================

# Portainer data directory
PORTAINER_DATA_PATH=./data

# ==========================================
# SYNOLOGY NAS SPECIFIC SETTINGS
# ==========================================

# Docker volumes path on Synology NAS
SYNOLOGY_DOCKER_PATH=/volume1/docker

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Network access restriction
LOCAL_NETWORK_ONLY=true

# ==========================================
# RESOURCE LIMITS
# ==========================================

# Memory limits for Portainer container
PORTAINER_MEMORY_LIMIT=512M
PORTAINER_MEMORY_RESERVATION=256M

# ==========================================
# BACKUP CONFIGURATION
# ==========================================

# Backup directory for Portainer data
BACKUP_PATH=/volume1/docker/backups/portainer