# Synology NAS Docker Management - Global Configuration
# Copy this file to .env and customize the values for your environment

# ==========================================
# SYSTEM CONFIGURATION
# ==========================================

# User and Group IDs for proper permissions on Synology NAS
# Run 'id' command on your NAS to get these values
# Default values work for most Synology setups
PUID=1000
PGID=1000

# Timezone configuration
# Use your local timezone (e.g., America/New_York, Europe/London, Asia/Tokyo)
TZ=UTC

# ==========================================
# SYNOLOGY NAS PATHS
# ==========================================

# Base Docker directory on Synology NAS
# Standard Synology Docker path (change if using different volume)
SYNOLOGY_DOCKER_PATH=/volume1/docker

# Project base directory
# This should match where you installed the project
PROJECT_BASE_PATH=/volume1/docker/syno-nas

# Data storage base path for all services
# All service data will be stored under this path
DATA_BASE_PATH=/volume1/docker/data

# ==========================================
# BACKUP CONFIGURATION
# ==========================================

# Global backup directory
# All automated backups will be stored here
BACKUP_BASE_PATH=/volume1/docker/backups

# Backup retention policy (days)
BACKUP_RETENTION_DAYS=30

# Enable automatic backup compression
BACKUP_COMPRESS=true

# Enable offsite backup sync (requires additional configuration)
BACKUP_OFFSITE_ENABLED=false

# ==========================================
# NETWORK CONFIGURATION
# ==========================================

# Default network name for inter-service communication
DOCKER_NETWORK_NAME=syno-nas-network

# Restrict services to local network only
# Set to 'false' only if you need external access (NOT RECOMMENDED)
LOCAL_NETWORK_ONLY=true

# Base domain for services (optional)
# Used for custom domain setup with reverse proxy
BASE_DOMAIN=

# ==========================================
# MONITORING AND LOGGING
# ==========================================

# Log level for all services (DEBUG, INFO, WARN, ERROR)
LOG_LEVEL=INFO

# Enable centralized logging
CENTRALIZED_LOGGING=false

# Log retention period (days)
LOG_RETENTION_DAYS=7

# Enable health monitoring
HEALTH_MONITORING_ENABLED=true

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL=300

# ==========================================
# RESOURCE LIMITS (GLOBAL DEFAULTS)
# ==========================================

# Default memory limit for small services
DEFAULT_MEMORY_LIMIT_SMALL=256M
DEFAULT_MEMORY_RESERVATION_SMALL=128M

# Default memory limit for medium services
DEFAULT_MEMORY_LIMIT_MEDIUM=512M
DEFAULT_MEMORY_RESERVATION_MEDIUM=256M

# Default memory limit for large services
DEFAULT_MEMORY_LIMIT_LARGE=1G
DEFAULT_MEMORY_RESERVATION_LARGE=512M

# ==========================================
# SECURITY SETTINGS
# ==========================================

# Enable automatic security updates
AUTO_SECURITY_UPDATES=true

# Enable vulnerability scanning
VULNERABILITY_SCANNING=false

# Enable container security monitoring
CONTAINER_SECURITY_MONITORING=false

# Force HTTPS for web interfaces (when possible)
FORCE_HTTPS=false

# ==========================================
# AUTOMATION SETTINGS
# ==========================================

# Enable automatic service updates
AUTO_UPDATES_ENABLED=false

# Update schedule (cron format) - default: 2 AM daily
AUTO_UPDATE_SCHEDULE="0 2 * * *"

# Enable parallel operations for multi-service tasks
PARALLEL_OPERATIONS=true

# Maximum parallel jobs for bulk operations
MAX_PARALLEL_JOBS=4

# ==========================================
# NOTIFICATION SETTINGS
# ==========================================

# Enable notifications for critical events
NOTIFICATIONS_ENABLED=false

# Email notifications (requires mail configuration)
NOTIFICATION_EMAIL=

# Webhook URL for Slack/Discord notifications
WEBHOOK_URL=

# Webhook notification level (ERROR, WARN, INFO)
WEBHOOK_NOTIFICATION_LEVEL=ERROR

# ==========================================
# DEVELOPMENT AND TESTING
# ==========================================

# Enable development mode (additional logging, debugging)
DEVELOPMENT_MODE=false

# Enable dry-run mode for testing scripts
DRY_RUN_MODE=false

# Skip prerequisite checks (for testing only)
SKIP_PREREQUISITES=false

# Enable verbose output for all operations
VERBOSE_OUTPUT=false

# ==========================================
# SERVICE CATEGORY DEFAULTS
# ==========================================

# Management services network prefix
MANAGEMENT_NETWORK_PREFIX=mgmt-

# Media services network prefix  
MEDIA_NETWORK_PREFIX=media-

# Productivity services network prefix
PRODUCTIVITY_NETWORK_PREFIX=prod-

# Networking services network prefix
NETWORKING_NETWORK_PREFIX=net-

# ==========================================
# ADVANCED CONFIGURATION
# ==========================================

# Docker daemon socket path (usually don't change)
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Custom Docker registry (if using private registry)
CUSTOM_DOCKER_REGISTRY=

# Docker image pull policy (always, missing, never)
DOCKER_PULL_POLICY=missing

# Enable Docker BuildKit for image builds
DOCKER_BUILDKIT_ENABLED=true

# Docker log driver for all services
DOCKER_LOG_DRIVER=json-file

# Docker log options
DOCKER_LOG_MAX_SIZE=10m
DOCKER_LOG_MAX_FILE=3